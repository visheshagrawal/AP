package com.company;

import java.util.*;
import java.lang.*;

class Graphs {
    Random rand = new Random();
    ArrayList<ArrayList<Integer>> adj;
    int V;

    Graphs(int v) {
        V = v;
        adj = new ArrayList<ArrayList<Integer>>(V);
        for (int i =1; i <=V; i++)
            adj.add(new ArrayList<Integer>());
    }

    void addEdge(int u, int v) {
        adj.get(u).add(v);
        //adj.get(v).add(u);
    }

    void display(){
        for(int i=0;i<adj.size();i++){
            System.out.print( i+" ");
            for(int j=0;j<adj.get(i).size();j++){
                System.out.print(adj.get(i).get(j)+" ");
            }
            System.out.println();
        }

    }

}


class Player{
    private final String username;
    Hero h;
    private String type;

    public String getType() {
        return type;
    }

    public void setType(String type) {
        this.type = type;
    }

    public Player(String uname, Hero h){
        this.username=uname;
        this.h=h;
    }


}

class Hero {
    float HP = 100;
    int XP = 0;
    int level = 1;
    float defence_temp=0;
    boolean special_attack;
//    ArrayList<Monster> m_list;
//
//
//    public Hero(ArrayList<Monster> m_list){
//        this.m_list=m_list;
//    }

    public float getAttack() {
        return attack;
    }

    public void setAttack(float attack) {
        this.attack = attack;
    }

    public float getDefence() {
        return defence;
    }

    public void setDefence(float defence) {
        this.defence = defence;
    }

    public int getMove() {
        return move;
    }

    public void setMove(int move) {
        this.move = move;
    }

    private float attack;
    private float defence;
    private int move;

    public int getPos() {
        return pos;
    }

    public void setPos(int pos) {
        this.pos = pos;
    }

    private int pos;

    public float getHP() {
        return HP;
    }

    public void setHP(float HP) {
        this.HP = HP;
    }

    public int getXP() {
        return XP;
    }

    public void setXP(int XP) {
        this.XP = XP;
    }

    public int getLevel() {
        return level;
    }

    public void setLevel(int level) {
        this.level = level;
    }

    public void changeLevelandIncreasehealth() {
        if (this.getXP() >= 60) {
            this.setLevel(4);
            this.setHP(250);
        } else if (this.getXP() >= 40) {
            this.setLevel(3);
            this.setHP(200);
        } else if (this.getXP() >= 20) {
            this.setLevel(2);
            this.setHP(150);
        } else {
            this.setHP(100);
        }

    }

    public void attack(Monster mq) {
        System.out.println("attack");
    }

    public void defence(Monster mq) {
        System.out.println("defense");
    }

    public void specialAttack(){

    }



    public void enemyAttack(Monster mq){
        double randomgaussian = (1/Math.pow(Math.PI*2, 0.5))*(Math.exp(-0.5*Math.pow(new Random().nextInt(3), 2)));

        this.setHP((float) (this.getHP()-0.25*randomgaussian*mq.getHP()));
        //this.setHP(this.getHP()-Math.abs((float)(0.25*mq.getHP()*new Random().nextGaussian()))+this.defence_temp);
        this.defence_temp=0;
        System.out.println("The attack by monster is "+0.25*randomgaussian*mq.getHP());
        System.out.println(this.getHP());
        this.fight(mq,this.getPos());

    }


    public void fight(Monster mq , int pos) {
        this.setPos(pos);
        Scanner scan = new Scanner(System.in);
        System.out.println("choose");
        if (this.getMove() >= 3) {
            System.out.println("1) Attack");
            System.out.println("2) Defense");
            System.out.println("3) Special Attack");
            int choose = scan.nextInt();
            switch (choose) {
                case 1:
                    this.attack(mq);
                    break;

                case 2:
                    this.defence(mq);
                    break;
                case 3:
                    this.specialAttack();
                    break;
            }
        } else {
            System.out.println("1) Attack");
            System.out.println("2) Defense");
            int choose = scan.nextInt();
            switch (choose) {
                case 1:
                    this.attack(mq);
                    break;

                case 2:
                    this.defence(mq);
                    break;
            }

        }


    }
}

class Warrior extends Hero{
    int count;
    public Warrior(){
        this.setAttack(10);
        this.setDefence(3);
        //this.setSpecial_attack();
        this.setMove(0);
        this.defence_temp=0;
        this.special_attack=false;
        this.count=3;
    }

    @Override
    public void attack(Monster mq){
        if(special_attack && this.count>0){
            mq.setHP(mq.getHP()-this.getAttack()-5);
            this.count--;
        }
        else if(this.count==0){
            this.special_attack=false;
        }
        else{
            mq.setHP(mq.getHP()-this.getAttack());
        }

        //System.out.println(mq.getLevel());
        System.out.println("The attack by hero is");
        System.out.println(this.getAttack());
        System.out.println(mq.getHP());
        this.setMove(this.getMove()+1);
        this.enemyAttack(mq);
    }

    @Override
    public void defence(Monster mq){

        if(special_attack && this.count>0){
            this.defence_temp=this.getDefence()+5;
            this.count--;
        }
        else if(this.count==0){
            this.special_attack=false;
        }
        else{
            this.defence_temp=this.getDefence();
        }
        this.setMove(this.getMove()+1);
        this.enemyAttack(mq);

    }

//    //@Override
//    public void enemyAttack(Monster mq){
//         this.setHP(this.getHP()-Math.abs((float)(0.25*mq.getHP()*new Random().nextGaussian()))+this.defence_temp);
//        this.fight(mq,this.getPos());
//    }

    public void specialAttack(Monster mq){
        special_attack=true;
        //this.setMove(this.getMove()+1);
        this.setMove(0);
        this.enemyAttack(mq);
    }







}

class Magi extends Hero{
    public Magi(){
        this.setAttack(5);
        this.setDefence(5);
        //this.setSpecial_attack();
        this.setMove(0);
    }

    @Override
    public void attack(Monster mq){
        mq.setHP(mq.getHP()-getAttack());
        System.out.println(mq.getLevel());
        System.out.println(mq.getHP());
    }

    @Override
    public void defence(Monster mq){
        System.out.println("Hello");
    }

    //@Override
    public void enemyAttack(Monster mq){
        this.setHP(this.getHP()-3);
    }
}

